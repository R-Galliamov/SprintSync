<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="1">

    <TableRow>

        <TextView
            android:id="@+id/tvWorkouts"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/runs" />

        <TextView
            android:id="@+id/tvWorkoutsValue"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="8" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvWorkoutDays"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/stats_workout_days" />

        <TextView
            android:id="@+id/tvWorkoutDaysValue"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="5/7" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvTotalDistance"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/stats_total_distance" />

        <TextView
            android:id="@+id/tv_distance_total_value"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="21.33 km" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvTotalDuration"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/stats_total_duration" />

        <TextView
            android:id="@+id/tv_duration_total_value"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="12:13:14" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvBestDistance"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/stats_longest_distance" />

        <TextView
            android:id="@+id/tvBestDistanceValue"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="2.33 km" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvBestDuration"
            style="@style/RegularText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/stats_longest_duration" />

        <TextView
            android:id="@+id/tvBestDurationValue"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="00:12:13" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvAvgPace"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/label_avg_pace" />

        <TextView
            android:id="@+id/tvAvgPaceValue"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="5:67" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvBestPace"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/stats_peak_pace" />

        <TextView
            android:id="@+id/tvBestPaceValue"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="2:45" />
    </TableRow>

    <TableRow>

        <TextView
            android:id="@+id/tvTotalBurnedKcal"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="@string/stats_total_burned_kcal" />

        <TextView
            android:id="@+id/tv_calories_total_value"
            style="@style/RegularText.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="32000" />
    </TableRow>


</TableLayout>
