<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/regularSpace"
    android:background="@drawable/bt_outlined_thirdly">

    <TextView
        android:id="@+id/tvDate"
        style="@style/SubTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/regularSpace"
        android:layout_marginEnd="@dimen/regularSpace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="06.07.2024" />

    <TextView
        android:id="@+id/tvDuration"
        style="@style/SubTitleText.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/regularSpace"
        android:layout_marginTop="@dimen/regularSpace"
        android:layout_marginBottom="@dimen/regularSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDate"
        tools:text="00:45:23" />

    <TextView
        android:id="@+id/tvDistance"
        style="@style/SubTitleText.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/regularSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvCalories"
        app:layout_constraintStart_toEndOf="@id/tvDuration"
        app:layout_constraintTop_toTopOf="@+id/tvDuration"
        tools:text="2.4 km" />

    <TextView
        android:id="@+id/tvCalories"
        style="@style/SubTitleText.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/regularSpace"
        android:layout_marginBottom="@dimen/regularSpace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvDuration"
        tools:text="345 kcal" />

</androidx.constraintlayout.widget.ConstraintLayout>