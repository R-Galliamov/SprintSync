<resources>
    <!-- Base application theme. -->
    <style name="Theme.SprintSync" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_100</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnPrimaryVariant">@color/gray_900</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_A100</item>
        <item name="colorSecondaryVariant">@color/blue_100</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorPrimaryContainer">?colorSecondary</item>
        <item name="colorOnPrimaryContainer">?colorOnSecondary</item>
        <item name="colorSecondaryContainer">?colorSecondaryVariant</item>
        <item name="colorOnSecondaryContainer">?colorSecondaryVariant</item>

        <item name="colorTertiary">@color/black</item>
        <item name="colorTertiaryContainer">@color/blue_A100</item>

        <!-- Thirdly brand color. -->
        <item name="colorThirdly">@color/yellow_300</item>
        <item name="colorThirdlyVariant">@color/yellow_100</item>

        <!-- Fourthly brand color. -->
        <item name="colorFourthly">@color/red_400</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>

        <!-- Window color. -->
        <item name="android:windowBackground">?colorPrimary</item>

        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>

    </style>


</resources>