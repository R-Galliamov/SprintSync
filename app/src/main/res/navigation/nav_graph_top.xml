<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.developers.sprintsync.global.ui.fragment.TabsFragment"
        android:label="tabsFragment">
        <action
            android:id="@+id/action_tabsFragment_to_trackingFragment"
            app:destination="@id/trackingFragment" />
        <action
            android:id="@+id/action_tabsFragment_to_locationRequestFragment"
            app:destination="@id/locationRequestFragment" />
        <action
            android:id="@+id/action_tabsFragment_to_trackDetailsFragment"
            app:destination="@id/trackDetailsFragment">
            <argument
                android:name="trackId"
                app:argType="integer" />
        </action>
        <action
            android:id="@+id/action_tabsFragment_to_updateGoalsFragment"
            app:destination="@id/updateGoalsFragment"
           />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.developers.sprintsync.global.ui.fragment.OnboardingFragment"
        android:label="onboardingFragment">
        <action
            android:id="@+id/action_onboardingFragment_to_tabsFragment"
            app:destination="@id/tabsFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/trackingFragment"
        android:name="com.developers.sprintsync.tracking.session.ui.TrackingFragment"
        android:label="fragment_tracking"
        tools:layout="@layout/fragment_tracking">
        <action
            android:id="@+id/action_tracking_to_locationRequestFragment"
            app:destination="@id/locationRequestFragment" />
        <action
            android:id="@+id/action_trackingFragment_to_sessionSummaryFragment"
            app:destination="@id/sessionSummaryFragment"
            app:popUpTo="@id/trackingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/locationRequestFragment"
        android:name="com.developers.sprintsync.global.ui.fragment.LocationRequestFragment"
        android:label="fragment_location_request"
        tools:layout="@layout/fragment_location_request">
        <action
            android:id="@+id/action_locationRequestFragment_to_trackingFragment"
            app:destination="@id/trackingFragment"
            app:popUpTo="@id/locationRequestFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sessionSummaryFragment"
        android:name="com.developers.sprintsync.tracking.analytics.ui.trackDetails.SessionSummaryFragment"
        android:label="fragment_session_summary"
        tools:layout="@layout/fragment_session_summary">
        <action
            android:id="@+id/action_sessionSummaryFragment_to_mapFragment"
            app:destination="@id/mapFragment">
            <argument
                android:name="trackId"
                app:argType="integer" />
        </action>
    </fragment>
    <fragment
        android:id="@+id/mapFragment"
        android:name="com.developers.sprintsync.tracking.analytics.ui.map.MapFragment"
        android:label="fragment_map"
        tools:layout="@layout/fragment_map">
        <argument
            android:name="trackId"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/trackDetailsFragment"
        android:name="com.developers.sprintsync.tracking.analytics.ui.trackDetails.TrackDetailsFragment"
        android:label="fragment_track_details"
        tools:layout="@layout/fragment_track_details">
        <action
            android:id="@+id/action_trackDetailsFragment_to_mapFragment"
            app:destination="@id/mapFragment">
            <argument
                android:name="trackId"
                app:argType="integer" />
        </action>
        <argument
            android:name="trackId"
            app:argType="integer" />

    </fragment>
    <fragment
        android:id="@+id/updateGoalsFragment"
        android:name="com.developers.sprintsync.statistics.presentation.updateGoals.UpdateGoalsFragment"
        android:label="fragment_update_goals"
        tools:layout="@layout/fragment_update_goals" />
</navigation>
