<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/tabsFragment"
        android:name="com.developers.sprintsync.ui.fragment.TabsFragment"
        android:label="tabsFragment" >
        <action
            android:id="@+id/action_tabsFragment_to_runDash"
            app:destination="@id/runDash" />
        <action
            android:id="@+id/action_tabsFragment_to_locationRequestFragment"
            app:destination="@id/locationRequestFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.developers.sprintsync.ui.fragment.OnboardingFragment"
        android:label="onboardingFragment" >
        <action
            android:id="@+id/action_onboardingFragment_to_tabsFragment"
            app:destination="@id/tabsFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/runDash"
        android:name="com.developers.sprintsync.ui.fragment.RunDashFragment"
        android:label="fragment_run_dash"
        tools:layout="@layout/fragment_run_dash" >
        <action
            android:id="@+id/action_runDash_to_locationRequestFragment"
            app:destination="@id/locationRequestFragment" />
    </fragment>
    <fragment
        android:id="@+id/locationRequestFragment"
        android:name="com.developers.sprintsync.ui.fragment.LocationRequestFragment"
        android:label="fragment_location_request"
        tools:layout="@layout/fragment_location_request" >
        <action
            android:id="@+id/action_locationRequestFragment_to_runDash"
            app:destination="@id/runDash" />
    </fragment>
</navigation>
