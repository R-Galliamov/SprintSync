<?xml version="1.0" encoding="utf-8"?><!-- TODO check the effect and fix if needed -->
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="?colorPrimaryVariant">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/shape.cornerRadius" />
            <solid android:color="?colorPrimaryVariant" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="?colorPrimary" />
            <stroke
                android:width="@dimen/shape.strokeWidth"
                android:color="?colorSecondary" />
            <corners android:radius="@dimen/lag8" />
        </shape>
    </item>
</ripple>
